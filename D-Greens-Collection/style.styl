@import url('https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap');
primary = #7cb324
stop2 = #aee800
*
  margin 0
  font-family 'Quicksand'
.container
  max-width 1280px
  margin 0 auto
  padding 1rem 1rem 6rem
svg
  margin-bottom 1rem
  height 80px
  width 350px
  text
    font-family 'Oleo Script'
.mobile
  .section1, .section3, .section5
    background-image linear-gradient(45deg, primary, stop2)
    .container
      header
        display flex
        justify-content flex-end
        gap 0.5rem
        a
          img
            width 30px
      .row2
        color #fff
        h1
          font-size 2.5rem
          margin-bottom 0.5rem
  .section2
    .row1
      margin-bottom 2rem
      h1
        text-align center
        font-size 2.5rem
        font-weight lighter
    .row2
      margin-bottom 4rem
      display grid
      grid-template-columns auto 1fr auto
      gap 1rem
      .col1, .col3
        display flex
        align-items center
        img
          width 50px
      .col2
        display flex
        gap 2rem
        overflow auto
        scroll-snap-type x mandatory
        &::-webkit-scrollbar
          display none
        img
          min-width 100%
          height 350px
          display block
          object-fit contain
          scroll-snap-align start
    .row3
      text-align center
      a
        padding 1rem 2rem
        background-color transparent
        border 2px solid primary
        color primary
        font-size 1rem
        border-radius 2rem
        font-weight 900
        text-decoration none
  .section3
    color #fff
    img
      width 100%
      max-width 100%
      height 400px
      object-fit: cover
      border-radius 1rem
      margin-bottom 0.5rem
    h1
      font-size 3rem
      margin-bottom 1rem
    p
      font-size 1.5rem
  .section4
    .container
      height 640px
      overflow auto
      .location
        margin-bottom 2rem
        img
          width 30px
          vertical-align middle
          margin-right 1rem
        span
          line-height 3rem
          font-weight bolder
          letter-spacing 0.2rem
      > img
        width 100%
        border-radius 1rem
        margin-bottom 4rem
      iframe
        width 100%
        border-radius 1rem
  .section5
    color #fff



// desktop interface
.desktop
  display: none
  .section1, .section3
    background-image linear-gradient(45deg, primary, stop2)
    color #fff
    .row1
      display flex
      justify-content flex-end
      gap 1rem
      margin-bottom 2rem
      img
        width 40px
    .row2
      display grid
      grid-template-columns 1fr 1fr
      > .col1
        display flex
        flex-direction column
        justify-content center
      .col2
        h1
          text-align center
          margin-bottom 1rem
          font-size 2rem
        .grid
          display grid
          grid-template-columns auto 1fr auto
          margin-bottom 3rem
          gap 2rem
          .col1, .col3
            display flex
            align-items center
            img
              width 50px
          .col2
            display flex
            overflow auto
            scroll-snap-type: x mandatory
            gap 1rem
            &::-webkit-scrollbar
              display none
            img
              display block
              min-width 100%
              height 400px
              object-fit contain
              scroll-snap-align start
        .link-container
          text-align center
          a
            text-decoration none
            padding 1rem 2rem
            border 2px solid #fff
            color #fff
            font-weight bold
            border-radius 2rem
  .section2
    .container
      display grid
      grid-template-columns 1fr 1fr
      gap 1rem
      height 640px
      .col1
        display flex
        flex-direction column
        justify-content center
        img
          width 400px
          border-radius 1rem
        h1
          font-size 3rem
          margin-bottom 1rem
        p
          font-size 1.5rem
      .col2
        overflow auto
        scroll-snap-type y mandatory
        > *
          scroll-snap-align start
        .location
          margin-bottom 1rem
          text-align center
          img
            width 30px
            vertical-align middle
          span
            line-height 3rem
            font-weight bold
        iframe
          margin-bottom 2rem
          width 100%
          border-radius 2rem
        > img
          width 100%
          border-radius 2rem
          margin-bottom 1.5rem
@media (min-width: 768px) 
  .mobile
    display none
  .desktop
    display block